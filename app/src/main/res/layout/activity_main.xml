<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.ransroad.MainActivity">

    <TextView
        android:text="Rán's Road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView"
        tools:text="Rán's Road"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:id="@+id/latitudeEditText"
        android:hint="latitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/longitudeEditText"
        android:layout_below="@+id/latitudeEditText"
        android:layout_alignLeft="@+id/latitudeEditText"
        android:layout_alignStart="@+id/latitudeEditText"
        android:layout_marginTop="24dp"
        android:hint="longitude" />

    <Button
        android:text="Get Weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/getWeatherButton"
        android:layout_below="@+id/longitudeEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <Button
        android:text="Get Clothing Suggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/getClothingButton"
        android:layout_below="@+id/getWeatherButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="28dp"
        android:id="@+id/appDescriptionTextView"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="In Norse mythology, Rán is a goddess associated with the sea." />
</RelativeLayout>